<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/presst"
    android:orientation="vertical"
    android:elevation="8dp"
    android:theme="@style/Theme.Design.NoActionBar"
    tools:context=".commandeView">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221">

        <ImageView
            android:id="@+id/containerimage1C"
            android:layout_width="266dp"
            android:layout_height="157dp"
            android:background="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.221" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="231dp"

        android:layout_height="99dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewC"
        app:layout_constraintVertical_bias="0.264">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.203"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.54">

            <TextView
                android:id="@+id/nomPresC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/heavy"
                android:text="TTTEDST"

                android:textColor="@color/blue"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/descPresC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/helvetice"
                android:text="TEEEST"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tarifPresC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TEEEST"
                android:textColor="@color/grey"
                android:textSize="15sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/localisationC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:drawableStart="@drawable/ic_localisation"
            android:drawablePadding="3dp"
            android:paddingTop="55dp"
            android:text="TEEEST"
            android:textColor="@color/grey"
            android:textSize="15sp"
            tools:layout_editor_absoluteX="253dp"
            tools:layout_editor_absoluteY="409dp" />
    </LinearLayout>

    <Button
        android:id="@+id/suppC"
        android:layout_width="127dp"
        android:layout_height="48dp"
        android:background="@drawable/buttonr"
        android:fontFamily="@font/helvetice"
        android:text="Annuler Commande"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.48" />


</androidx.constraintlayout.widget.ConstraintLayout>