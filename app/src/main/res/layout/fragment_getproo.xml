<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profil">


    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonb"
        android:text="VALIDER"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fin"
        app:layout_constraintVertical_bias="0.182" />

    <EditText
        android:id="@+id/debut"


        android:background="@drawable/intputlogin"
        android:drawableStart="@drawable/ic_clock"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:focusable="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:hint="Heure de debut"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.468" />

    <EditText
        android:id="@+id/fin"
        android:background="@drawable/intputlogin"
        android:drawableStart="@drawable/ic_clock"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:drawablePadding="10dp"

        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/grey"
        android:textColorHint="@color/grey"
        android:ems="10"
        android:inputType="time"
        android:focusable="false"
        android:hint="Heure de fin"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/debut"
        app:layout_constraintVertical_bias="0.053" />

    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="DEVENEZ PRO !"
        android:fontFamily="@font/heavy"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.331"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.326" />

    <TextView
        android:id="@+id/textv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/lightt"
        android:text="Vos horaire de travail"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.381" />
</androidx.constraintlayout.widget.ConstraintLayout>

